<%- include('partials/header') %>

<section class="hero">
  <div>
    <h1>Level up your career with premium online courses</h1>
    <p>Join thousands of learners, buy once, and access courses from your dashboard forever.</p>
  </div>
</section>

<section>
  <h2>Popular Courses</h2>
  <div class="grid">
    <% courses.forEach(course => { %>
      <article class="card">
        <img src="<%= course.thumbnail %>" alt="<%= course.title %>" />
        <div class="card-body">
          <h3><%= course.title %></h3>
          <p><%= course.description %></p>
          
          <div class="card-footer">
            <% if (course.price == 0) { %>
              <strong>FREE</strong>
            <% } else { %>
              <strong>â‚¹<%= course.price %></strong>
            <% } %>

            <% if (currentUser) { %>
              <a class="btn" href="/course-player/<%= course.id %>">Start Course</a>
            <% } else { %>
              <a class="btn" href="/login">Login to Start</a>
            <% } %>

          </div>

        </div>
      </article>
    <% }) %>
  </div>
</section>

<%- include('partials/footer') %>
